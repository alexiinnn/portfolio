header.header
    .header__bg
        img(src='./assets/img/back-top.jpg', alt='mountains header background')
    .social-and-nav
        .social
            ul.social__list
                li.social__item.social__item-top.facebook
                    i.fa.fa-facebook-square
                li.social__item.social__item-top.github
                    i.fa.fa-github
                li.social__item.social__item-top.linkedin
                    i.fa.fa-linkedin
        include nav.pug
    .header__bg-text
        img(src='./assets/img/lettering-portfolio.png', alt='portfolio', class="header__bg-text-img")
    .avatar-wrapper
        .avatar
            .avatar__picture
                img(src="assets/img/ava.jpg")
            .avatar__name Alexey Nelipovich
            .avatar__description Web developer personal website
    include triangles.pug